<div class="sw-cms-el-moorl-shop-the-look">
    <div class="hotspot-area">
        <div class="hotspot-area-image">
            <img :src="mediaUrl">
            <div class="hotspot-area-image-overlay" ref="hotspotArea">
                <template v-if="element.data.products">
                    <div v-if="element.config.productMediaHotspots.value[product.id]"
                         v-for="product in element.data.products"
                         :style="{'top': element.config.productMediaHotspots.value[product.id].top, 'left': element.config.productMediaHotspots.value[product.id].left}"
                         class="hotspot-area-image-overlay-dot"
                         v-tooltip="{message: product.name, position: 'top'}">
                    </div>
                </template>
            </div>
        </div>
    </div>
    <div class="product-list">
        <div class="product-list-content">
            <template v-if="element.data.products">
                <div v-if="element.config.productMediaHotspots.value[product.id]"
                     v-for="product in element.data.products"
                     class="product-list-content-item">
                    <img v-if="product.cover && product.cover.media"
                         :src="product.cover.media.url"
                         :alt="product.name">
                    <div class="product-list-content-item-info">
                        <h4>{{ product.translated.name }}</h4>
                        <div v-if="product.price" class="product-list-content-item-info-price">
                           {{ product.price[0].gross | numberFormat }}
                        </div>
                    </div>
                    <div>
                        <i class="fas fa-check"></i>
                    </div>
                </div>
            </template>
        </div>
        <hr>
        <div class="product-list-buy">
            <div class="product-list-buy-price">
                <div>Total:</div>
                <div class="product-list-buy-price-total">{{ priceTotal | numberFormat }}</div>
            </div>
        </div>
    </div>
</div>
